{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@ens-pm/*": ["packages/*/src"],
      "@ens-pm/hackathon-analyzer": ["packages/hackathon-analyzer/src"]
    }
  },
  "references": [
    { "path": "./packages/hackathon-analyzer" }
  ]
}